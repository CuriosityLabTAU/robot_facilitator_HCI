<ScreenDyslexia>:
    name: 'ScreenDyslexia'
    BoxLayout:
        orientation: 'vertical'
        id: 'single'
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: menu
            pos: 0 , 0
            size: root.width, root.height * 0.1
            size_hint_y: None
            height: '48dp'

            ToggleButtonDyslexia:
                id: menu_summary
                text:'ןוחביא'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('diagnosis')
                name: 'menu_summary'

            ToggleButtonDyslexia:
                id: menu_tefel_summary
                text:'לפת םוכיס'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('tefel_summary')
                name: 'menu_tefel_summary'

            ToggleButtonDyslexia:
                id: menu_tefel
                text:'לפת תולימ'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('tefel')
                name: 'menu_tefel'

            ToggleButtonDyslexia:
                id: menu_single_summary
                text:'תודדוב םוכיס'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                on_press:  app.change_tab('single_summary')
                name: 'menu_single_summary'

            ToggleButtonDyslexia:
                id: menu_single
                text: 'תודדוב םילימ'
                font_name: 'fonts/the_font.ttf'
                group: 'Menu'
                state: 'down'
                on_press:  app.change_tab('single')
                name: 'menu_single'

        LabelDyslexia:
            #text: '   13 - ליג  ,הבקנ - ןימ'
            size_hint_y: None
            height: '29sp'
            bcolor: 52/255.0, 164/255.0, 204/255.0, 1
            bcolor: 1,1,1,1

        FloatLayout:
            size: root.width, root.height
            pos: 0,0

            FloatLayout:
                ScrollView:
                    id: scroll_content
                    do_scroll_x: False
                    bar_width: 10
                    padding: 5
                    opacity: 1
                    disables: False
                    scroll_type: ['bars','content']


            FloatLayout: #this is the help widget that appear in the tablet condition when a ? is pressed.
                id: help_widget
                opacity: 0
                size_hint:(0.7,0.4)
                pos_hint: {'center_x':0.5, 'y':0.7}
                #size_hint_y: None
                bcolor: 0.3,0.3,1,1
                canvas.before:
                    Color:
                        rgba: self.bcolor
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    id: help_label
                    text: '  דכגדגכ דגכדגכ  דגכגדכ דגכ דגכדגכ דגכדגכדגכ דגכדגכדגככ דגכדגכדגכגכד דגכדגכדגכדגכ דגכדגכדגכדג דגכדגכדגכדגכד דגכדגכדגכדג דגכדגכדגכדגכ דגכדגכדגכדג דגכדגכדגדגכגדכ eדגכדגכדכגדכ דגכדגכדדגכ'
                    halign: 'right'
                    valign: 'middle'
                    text_size: self.width*0.9, self.height
                    color: 0,0,0,1
                    size_hint:(0.95,0.8)
                    pos_hint: {'center_x':0.5,'center_y':0.45}
                    font_size: '14sp'
                    font_name: 'fonts/the_font.ttf'
                    bcolor: 1,1,1,1
                    borders: 2,'solid',(1,1,1,1.1)
                    canvas.before:
                        Color:
                            rgba: self.bcolor
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    id: close_help_button
                    size_hint:(0.05,0.1)
                    pos_hint: {'center_x':0.95,'center_y':0.92}
                    text:'x'
                    on_press: app.press_close_help()




