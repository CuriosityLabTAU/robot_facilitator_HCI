<ScreenRegister>:
    name:'ScreenRegister'
    Widget:
        canvas.before:
            Color:
                rgba: 0.2,0.3,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            pos: root.width * 0.1, root.height * 0.9
            size: root.width * 1, root.height * 0.05
            id: title
            text:"register tablet"
            font_size: 16
            color: 1,1,1,1

        Label:
            pos: root.width * 0.1, root.height * 0.6
            size: root.width * 0.2, root.height * 0.05
            id: tablet_id_label
            text:"טלבאט"
            font_name: 'fonts/the_font.ttf'
            font_size: 16
            color: 1,1,1,1

        LoggedTextInput:
            id: tablet_id
            name: "tablet_id"
            font_size: 16
            text:""
            pos: root.width * 0.3, root.height * 0.6
            size: root.width * 0.2, root.height * 0.05

        Label:
            pos: root.width * 0.1, root.height * 0.7
            size: root.width * 0.2, root.height * 0.05
            id: group_id_label
            text:"הצובק"
            font_name: 'fonts/the_font.ttf'
            font_size: 16
            color: 1,1,1,1

        LoggedTextInput:
            id: group_id
            name: "group_id"
            font_size: 16
            text:""
            pos: root.width * 0.3, root.height * 0.7
            size: root.width * 0.2, root.height * 0.05

        Label:
            pos: root.width * 0.1, root.height * 0.8
            size: root.width * 0.2, root.height * 0.05
            id: subject_id_label
            text:"תוהז תדועת"
            font_name: 'fonts/the_font.ttf'
            font_size: 16
            color: 1,1,1,1

        LoggedTextInput:
            id: subject_id
            name: "subject_id"
            font_size: 16
            text:""
            pos: root.width * 0.3, root.height * 0.8
            size: root.width * 0.2, root.height * 0.05

        Label:
            pos: root.width * 0.1, root.height * 0.5
            size: root.width * 0.2, root.height * 0.05
            id: subject_id_label
            text:"יוסינ יאנת"
            font_name: 'fonts/the_font.ttf'
            font_size: 16
            color: 1,1,1,1

        LoggedToggleButton:
            text: 'robot'
            group: 'condition'
            size: root.width * 0.15, root.height * 0.05
            pos: root.width * 0.3, root.height * 0.5
            on_press: app.select_condition(self)
            allow_no_selection: False
            state: 'down'

        LoggedToggleButton:
            text: 'tablet'
            group: 'condition'
            size: root.width * 0.15, root.height * 0.05
            pos: root.width * 0.5, root.height * 0.5
            on_press: app.select_condition(self)
            allow_no_selection: False

        Label:
            pos: root.width * 0.1, root.height * 0.4
            size: root.width * 0.2, root.height * 0.05
            id: subject_id_label
            text:"דומילה תדיחי"
            font_name: 'fonts/the_font.ttf'
            font_size: 16
            color: 1,1,1,1

        LoggedToggleButton:
            text: 'session1'
            group: 'session'
            size: root.width * 0.15, root.height * 0.05
            pos: root.width * 0.3, root.height * 0.4
            on_press: app.select_session(self)
            allow_no_selection: False
            state: 'down'

        LoggedToggleButton:
            text: 'session2'
            group: 'session'
            size: root.width * 0.15, root.height * 0.05
            pos: root.width * 0.5, root.height * 0.4
            on_press: app.select_session(self)
            allow_no_selection: False

        LoggedToggleButton:
            text: 'session3'
            group: 'session'
            size: root.width * 0.15, root.height * 0.05
            pos: root.width * 0.7, root.height * 0.4
            on_press: app.select_session(self)
            allow_no_selection: False

        LoggedButton:
            id: tablet_id_btn
            name: 'register_tablet'
            background_color: 0.5,0.5,0.5,1
            background_normal: ''
            text: 'register tablet'
            font_size: 16
            size: root.width * 0.15, root.height * 0.05
            pos: root.width * 0.3, root.height * 0.2
            on_press: app.register_tablet()

        Label:
            pos: root.width * 0, root.height * 0.1
            size: root.width * 1, root.height * 0.05
            id: callback_label
            text:"callback"
            font_size: 16
            color: 1,1,1,1
<ScreenRobotIntroduction>
    name: 'ScreenRobotIntroduction'
    Widget:
        orientation: 'vertical'
        padding: ['20dp','20dp','20dp','20dp']
        spacing: '20dp'
        canvas.before:
            Color:
                rgba: 0.2,0.3,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size
    LabelRobotator:
        text: '!םיאבה םיכורב'
        font_size: '24sp'
        halign: 'center'
        pos_hint: {'center_x':0.5,'center_y':0.45}

<ScreenScaleImage>:
    name: 'ScreenScaleImage'
    Label:
        text: "ScreenScaleImage"
    Widget:
        orientation: 'vertical'
        padding: ['20dp','20dp','20dp','20dp']
        spacing: '20dp'
        canvas.before:
            Color:
                rgba: 0.2,0.3,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size


        GridLayout:
            pos: root.width * 0.02, root.height * 0.9
            size: root.width * 0.96 , '25dp'
            pos_hint: None,None
            size_hint: None,None
            cols: 6


            LabelRobotator:
                size: '25dp','25dp'
                halign: 'center'
                text: "1"
            LabelRobotator:
                size: '25dp','25dp'
                halign: 'center'
                text: "2"
            LabelRobotator:
                size: '25dp','25dp'
                halign: 'center'
                text: "3"
            LabelRobotator:
                size: '25dp','25dp'
                halign: 'center'
                text: "4"
            LabelRobotator:
                size: '25dp','25dp'
                halign: 'center'
                text: "5"
            LabelRobotator:
                height: '25dp'
                size_hint: 1,1
                id: label_statement
                text: ""
            CheckBoxRobotator:
                id: checkbox_1
                group: 'scale_image'
                #pos: self.parent.x + self.parent.width * 0.817, self.parent.y + self.parent.height * 0.9
            CheckBoxRobotator:
                id: checkbox_2
                group: 'scale_image'
                #pos: self.parent.x + self.parent.width * 0.835, self.parent.y + self.parent.height * 0.9
            CheckBoxRobotator:
                id: checkbox_3
                group: 'scale_image'
                #pos: self.parent.x + self.parent.width * 0.588, self.parent.y + self.parent.height * 0.9
            CheckBoxRobotator:
                id: checkbox_4
                group: 'scale_image'
                #pos: self.parent.x + self.parent.width * 0.401, self.parent.y + self.parent.height * 0.9
            CheckBoxRobotator:
                id: checkbox_5
                group: 'scale_image'
                #pos: self.parent.x + self.parent.width * 0.656, self.parent.y + self.parent.height * 0.9
            LabelRobotator:
                height: '25dp'
                id: label_statement
                size_hint: 1,1
                text: ":שמחל תחא ןיב 'תכרעמה בצמ לש תוארנ' הקיטסירויה תא וגרד"


        FloatLayout:
            size_hint: None, None
            pos_hint: None, None
            size: root.width*0.96, root.height*0.8
            pos: root.width*0.02, root.height*0.15
            Image:
                id: screenshot
                size: self.parent.width, self.parent.height * 0.85
                size_hint: None,None
                pos: self.parent.pos
                halign: 'center'
                source: 'images/activity6.png'
                opacity: 1
                allow_stretch: True
                keep_ratio: False

        ButtonRobotator:
            id: btn_continue
            pos: root.width*0.02, root.height*0.02
            name: 'btn_continue'
            text: 'ךשמה'


